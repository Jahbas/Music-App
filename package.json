{
  "name": "music-app",
  "version": "1.4.0",
  "description": "Fast, local-first desktop music player with significantly lower memory usage than typical streaming clients.",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"cd web && npm run dev\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:electron": "tsc -p . && electron .",
    "build:web": "cd web && npm run build",
    "build:electron": "tsc -p . && electron-builder",
    "build": "npm run build:web && npm run build:electron"
  },
  "keywords": [
    "music",
    "electron",
    "player"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^22.10.1",
    "concurrently": "^9.0.0",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.example.music",
    "productName": "Music",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "web/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icons/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "chokidar": "^3.6.0"
  }
}
